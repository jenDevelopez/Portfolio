---
import Logo from "../components/icons/Logo.astro";
import BurgerButton from "../components/BurgerButton.astro";
import ToggleTheme from "./ToggleTheme.astro";
---

<header id="header" class="p-4 flex justify-between items-center border-b border-b-gray-200 md:items-center md:gap-4">
  <div class="flex justify-start items-center w-[50%] gap-4">
    <Logo class="size-6 text-orange-300 dark:text-orange-300" />
    <span class="text-gray-900 dark:text-white/90">Jennifer Lopez</span>
  </div>
  <ToggleTheme />
  <BurgerButton />
  <nav
    class="w-40 h-40 p-4  absolute right-6 top-14 bg-orange-50 dark:bg-gray-800 rounded-xl inactive md:static md:bg-transparent md:w-full md:h-16 md:dark:bg-transparent ">
    <ul class="w-full flex flex-col justify-between items-start md:flex-row md:justify-end md:w-1/2 absolute  ">
      <li class="w-1/2 dark:hover:bg-transparent dark:hover:opacity-50 pointer md:hover:bg-transparent md:hover:opacity-50 dark:text-white md:text-end "><a href="/">Inicio</a></li>
      <li class="w-1/2 dark:hover:bg-transparent dark:hover:opacity-50 pointer md:hover:bg-transparent md:hover:opacity-50 dark:text-white md:text-end" ><a href="#projects">Proyectos</a></li>
      <li class="w-1/2 dark:hover:bg-transparent dark:hover:opacity-50 pointer md:hover:bg-transparent md:hover:opacity-50 dark:text-white md:text-end" ><a href="#about">Sobre mi</a></li>
      <li class="w-1/2 dark:hover:bg-transparent dark:hover:opacity-50 pointer md:hover:bg-transparent md:hover:opacity-50 dark:text-white md:text-end" ><a href="#contact">Contacto</a></li>
    </ul>
  </nav>
</header>

<script>
  document.querySelector("#burgerBtn")?.addEventListener("click", () => {
    document.querySelector("nav")?.classList.toggle("inactive");
  });
  document.querySelector('a')?.addEventListener("click",() => {
    document.querySelector("nav")?.classList.remove("inactive");
  })

  
</script>

<style>
  .inactive {
    display: none;
  }
  @media(width >= 768px){
    .inactive{
      display: block;
    }
  }
</style>
