---
import Copyright from '../components/icons/Copyright.astro'
import UpButton from './UpButton.astro';
---

<footer class="p-4  flex justify-between items-center">
 <p class="copy w-full flex items-center gap-2 dark:text-white">
  <Copyright class="size-4"/>  
</p> 
<UpButton />
</footer>

<script>
  const date = new Date();
  const year = date.getFullYear()
  const p = document.querySelector('p.copy');
  const span = document.createElement('span');
  span.innerHTML = year.toString();
  p?.appendChild(span)
</script>

